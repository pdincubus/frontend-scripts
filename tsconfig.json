{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist/js",
    "rootDir": "./src/ts",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/ts/*"],
      "~utils/*": ["src/ts/utilities/*"],
      "~checkout/*": ["src/ts/checkout/*"]
    }
  },
  "include": ["src/ts/**/*"]
}